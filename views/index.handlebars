<!--  Setup the `index.handlebars` to have the template that Handlebars can render onto.

     * Create a button in `index.handlebars` that will submit the user input into the database. -->

<h1>Burger APP</h1>

<p>Order youre burger!</p>

<!-- Pass in data from server.js -->
<ul>
  {{#each burgers}}
  	<li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">devoured:</span> {{this.devoured}}</p>
      <p><span class="label">burger_name:</span> {{this.burger_name}}</p>

      <button data-id="{{this.id}}" class="deldevoured">Delete</button>

      <a href="/{{this.id}}">Update this devoured</a>
  	</li>
  {{/each}}
</ul>

<h2>Add a burger</h2>

<form class="create-form">

  <div class="form-group">
    <label for="auth">burger_name:</label>
    <input type="text" id="auth" name="burger_name">
  </div>

  <div class="form-group">
    <label for="quo">devoured:</label>
    <textarea id="quo" name="devoured" rows="8" cols="40"></textarea>
  </div>

  <button type="submit">Add devoured</button>
</form>